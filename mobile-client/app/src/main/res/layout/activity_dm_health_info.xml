<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".dmHealthInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/health_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Health Information"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="3 places you lastly visited"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="5dp"
            android:textColorHint="@color/design_default_color_on_secondary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/place1_p"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_health_location"
            android:drawablePadding="4dp"
            android:hint="@string/country_region_city"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/place2_p"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_health_location"
            android:drawablePadding="4dp"
            android:hint="@string/country_region_city"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/place3_p"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_health_location"
            android:drawablePadding="4dp"
            android:hint="@string/country_region_city"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Signs and symtoms"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColorHint="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/fever_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Fever"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/cough_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Dry Cough"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/tiredness_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Tiredness"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:elevation="20pt"
            android:text="@string/submit"
            android:textColor="@color/color"
            android:textSize="20sp" />

    </LinearLayout>


</ScrollView>